<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" /> <!-- Permite que haya tildes entre otras cosas -->
        <title>Tu recetario to guapo</title>

        <!-- JQuery Implementation -->
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        <!-- JQuery Implementation -->

        <!-- Bootstrap Implementation -->
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <!-- Bootstrap Implementation -->

        <!-- Descarga de fuentes personalizadas  -->
        <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet"> <!-- descarga Patrick Hand-->
        <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet"> <!-- descarga Cookie-->
        <!-- Descarga de fuentes personalizadas -->

        <link rel="stylesheet" href="{{desplazamiento}}style.css"> <!-- Cargamos el .CSS  -->
        <script src="{{desplazamiento}}main.js"></script>           <!-- Cargamos el .js -->

    </head>

    <body>
        <h1 class="tituloPpal">Bienvenido a tu recetario favorito</h1>

        <!-- Botones de navegación -->
        <ul class="nav nav-tabs inputBg">
            <li id="recetas" class="inactive"> <a href="/recetas"> Recetas  </a></li>
            <li id="ingredientes" class="inactive"> <a href="/ingredientes"> Ingredientes </a></li>
            <li id="crearReceta" class="inactive"> <a href="/crearReceta"> Crear Receta </a></li>
            <li id="crearIngrediente" class="inactive"> <a href="/crearIngrediente"> Crear Ingrediente </a></li>
            <li id="buscar" class="inactive"> <a href="/buscar"><span class="glyphicon glyphicon-search"></span>  Buscar</a> </li>
        </ul>
        <!-- Botones de navegación -->


        <div class="receta">
            <img src="{{desplazamiento}}{{receta.foto}}">
            <h2>{{receta.nombre}}</h2>
            <p>{{receta.descripcion}}</p>

            <h3>Pasos: </h3>
            <ol>
                <!--receta.pasos = ["paso1","paso2","paso3"...] -->
                {{#receta.pasos}}
                    <li>{{.}}</li>
                {{/receta.pasos}}
            </ol>

            <h3>Ingredientes</h3>
            <ul>
                <!-- ingredientes = [{valor:String}, ...] valor guarda el nombre de cada uno de los ingredientes que tenga la receta-->
                {{#ingredientes}}
                    <li>{{valor}}</li>
                {{/ingredientes}}
            </ul>    
        </div>

        <form action="/recetas">
            <button class="btn btn-default inputBg">Volver</button>
            <button class="btn btn-default inputBg" type ="button" onclick="modificarReceta({{indice}})">Modificar receta</button>
            <button class="btn btn-default inputBg" type ="button" onclick="borrarReceta({{indice}})">Borrar receta</button> 
        </form>
    </body>
</html>