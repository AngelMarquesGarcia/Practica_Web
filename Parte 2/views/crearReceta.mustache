        <!-- Bootstrap Implementation -->
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <!-- Bootstrap Implementation -->

        <!-- Descarga de fuentes personalizadas  -->
        <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet"> <!-- descarga Patrick Hand-->
        <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet"> <!-- descarga Cookie-->
        <!-- Descarga de fuentes personalizadas -->

        <link rel="stylesheet" href="{{desplazamiento}}style.css"> <!-- Cargamos el .CSS  -->
        <script src="{{desplazamiento}}main.js"></script>           <!-- Cargamos el .js -->

    </head>

    <body>
        <h1 class="tituloPpal">Bienvenido a tu recetario favorito</h1>

        <!-- Botones de navegación -->
        <ul class="nav nav-tabs inputBg">
            <li id="recetas" class="inactive"> <a href="/recetas"> Recetas  </a></li>
            <li id="ingredientes" class="inactive"> <a href="/ingredientes"> Ingredientes </a></li>
            <li id="crearReceta" class="active"> <a href="/crearReceta"> Crear Receta </a></li>
            <li id="crearIngrediente" class="inactive"> <a href="/crearIngrediente"> Crear Ingrediente </a></li>
            <li id="buscar" class="inactive"> <a href="/buscar"><span class="glyphicon glyphicon-search"></span>  Buscar</a> </li>
        </ul>
        <!-- Botones de navegación -->

        <h2>Crea una nueva receta!</h2>
        <form role="form" id="recForm"> <!-- action="/recetas/guardar{{indiceReceta}}" -->
            <div class="form-group">
                <label>Nombre: </label>
                <input type="text" class="form-control" id="rName" placeholder="Un nombre bonito" value="{{receta.nombre}}">
            </div>
            <div class="form-group">
                <label>Descripción: </label>
                <input type="text" class="form-control" id="rDesc" placeholder="Una descripción detallada" value="{{receta.descripcion}}">
            </div>

            <div class="form-group">
                <label>Introduzca la URL de una foto (opcional): </label>
                <input type="text" class="form-control" id="rFoto" value="{{receta.foto}}" placeholder="https://imagenes.20minutos.es/uploads/imagenes/2020/06/19/rick-astley-en-su-cancion-never-gonna-give-you-up.gif">
            </div>


            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <div class="form-group">
                <label id="pasosLabel">Introduce el paso {{objPasos.lengthPlusOne}} de la receta: </label>
                <input type="text" class="form-control" id="rPasos" placeholder="Paso {{objPasos.lengthPlusOne}}">
                <button id="pasosBtn" type="button" class="btn btn-default inputBg" onclick="crearPaso({{objPasos.length}})">Enviar paso {{objPasos.lengthPlusOne}}</button>
                <ol id=pasosList>
                <!--objPasos = {length:n, lista:[{indice:0,valor:"Hello"}, {1:"World"}]} -->
                    {{#objPasos.lista}}
                        <li id="idPaso{{indice}}">{{valor}} <button type="button" class="btn btn-default" onclick="modificarPaso({{indice}})">Modificar Paso {{indice}}</button><button type="button" class="btn btn-default" onclick="borrarPaso({{indice}})">Borrar Paso {{indice}}</button></li>
                    {{/objPasos.lista}}
                </ol>
            </div>
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            <!-- MUY IMPORTANTE, LOS ÍNDICES DE LOS PASOS ESTÁN MAL PUESTOS (creo) -->
            
            <p style="font-weight:700">Ingredientes: </p>
            <div class="form-group">
                <div class="scrollbar">
                <!-- objListaIngrediente = [{indiceOG:3,indiceActual:0,nombre:"juan"},{indiceOG:4,indiceActual:1,nombre:"a"}] -->
                    {{#objListaIngrediente}}
                        <input type="checkbox" id="ing{{indiceActual}}" value="{{indiceOG}}">
                        <label id="ingLabel{{indiceActual}}">{{nombre}}</label>
                        <br>
                    {{/objListaIngrediente}}
                </div>
            </div>

            <button id="btnSubmitRec" type="button" class="btn btn-default inputBg" onclick="guardarReceta('{{indiceReceta}}','{{ingredientSize}}')">Enviar</button>
            {{#modificar}}
                <button id="btnSubmitRec" type="submit" formmethod="GET" formaction="/recetas{{indiceReceta}}" class="btn btn-default inputBg">Cancelar</button>
            {{/modificar}}
        </form>

        

    </body>
</html>

